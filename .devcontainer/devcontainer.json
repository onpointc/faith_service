{
  "name": "Faith & Service Dev (Codespaces)",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/postgres:1": {
      "version": "16",
      "database": "faith_service",
      "user": "postgres",
      "password": "postgres"
    }
  },
  "postCreateCommand": "corepack enable && corepack prepare pnpm@latest --activate && pnpm i",
  "forwardPorts": [3000, 8787, 5432],
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "prisma.prisma",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}
